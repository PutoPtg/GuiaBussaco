<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fundo"
    android:orientation="vertical"
    android:layout_gravity="center|top">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center|top"
        android:id="@+id/linearLayout"
        android:layout_weight="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logotipo"
        android:clickable="false"
        android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center|bottom"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Guia_botao"
                    android:src="@drawable/botaoguiabtb"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/guia_nome"
                    android:onClick="chamaGuia"
                    android:background="#00000000"
                    android:scaleType="centerInside"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Mapa_botao"
                    android:src="@drawable/botaorotasbtb"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/Rotas_nome"
                    android:onClick="chamaRotas"
                    android:background="#00000000"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Opcoes_botao"
                    android:src="@drawable/botaoopcoesbtb"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/def_nome"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:onClick="settingsCall"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Acerca_botao"
                    android:src="@drawable/botaoacercabtb"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/acerca_nome"
                    android:cropToPadding="false"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:onClick="acercaCall"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
